<%= render 'shared/banner' %>


  <div class="container-fluid card-container">
    <h1><strong>Trending Hedgies</strong></h1>

    <div class="row padded-margin">
      <% @hedgies.each do |hedgie| %>
      <div class="col-xs-12 col-sm-4">

        <div class="card" style="background-image: url('<%= !hedgie.photos.empty? ? cl_image_path(hedgie.photos.first.path, width: 350, height: 200, crop: :fill, class: "background-image") : "" ; %>')">
        <div class="card-background"></div>
         <div class="card-description">
        </div>
        <div class="card-info">
          <h3 class="white-name"><%= link_to hedgie.name, hedgy_path(hedgie) %></h3>
          <h4>â‚¬ <%= hedgie.price %> per day</h4>
        </div>
        <a class="card-link" href="#"></a>
      </div>
    </div>
<% end %>
  </div>
</div>
