<div class="container">

  <div class="col-xs-6">
    <div class="all-hedgies">
      <form action="/hedgies" action="GET">
       <input type="text" name="address">
       <input type="submit" class="btn btn-warning">
        <%= link_to "Back to all hedgies", hedgies_path, class: "btn btn-warning" %>
     </form>
     </div>

     <% @hedgies.each do |hedgie| %>
     <div class="col-xs-6">

     <%= link_to hedgie.name, hedgy_path(hedgie) %>

      <% if hedgie.photos? %>
      <%= cl_image_tag hedgie.photos.first.path, width: 200, height: 150, crop: :fill %>
      <% end %>
      <div>
       <%= hedgie.address %>
     </div>
   </div>
   <% end %>
 </div>

  <div class="col-xs-6">

    <div id="map" style="width: 100%; height: 600px;">
    <% content_for(:after_js) do %>
    <%= javascript_tag do %>
    $(document).ready(function() {
    var handler = Gmaps.build('Google');
    handler.buildMap({ internal: { id: 'map' } }, function() {
    markers = handler.addMarkers(<%= raw @hash.to_json %>);
    handler.bounds.extendWith(markers);
    handler.fitMapToBounds();
    if (markers.length == 0) {
    handler.getMap().setZoom(2);
  } else if (markers.length == 1) {
  handler.getMap().setZoom(14);
}
});
});
<% end %>
<% end %>
</div>
</div>


</div>
