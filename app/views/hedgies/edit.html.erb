<div class="form-container">
  <%= simple_form_for @hedgie do |f| %>
  <div class="form-form">
    <h2 class= "text-center">Update <%= @hedgie.name %>'s Profile</h2>
    <br>
    <div class="col-xs-12 col-sm-6 col-md-6">
    <div class="form-inputs">
        <%= f.input :name, as: :text,  placeholder: "name", label: false %>
        <%= f.input :address, as: :text,  placeholder: "City", label: false %>
        <%= f.input :description, as: :text,  placeholder: "...", label: false %>
      </div>
      <div class="form-actions">
        <%= f.button :submit, class: "home-button-green" %>
      </div>
    </div>
  <div class="col-xs-12 col-md-6 top-padding">
    <%= f.input :photos, as: :attachinary, input_html: { multiple: true } %>
    <% end %>
  </div>
  </div>
</div
