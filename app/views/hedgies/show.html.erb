<div class="container-fluid">
  <div class="row">
    <div class="col-xs-8 hedgie-input">

      <% if @hedgie.photos? %>

        <% @hedgie.photos.each_with_index do |photo, idx| %>
          <%= link_to cl_image_path(photo.path, crop: :fill), class: "swipebox show-banner" do %>
            <%= cl_image_tag photo.path, width: 600, height: 400, crop: :fill, style: ( idx > 0 ? "display: none;" : "" ) %>
          <% end %>
        <% end %>
      <% else %>
        <div class="show-banner">
          <img src="
  http://res.cloudinary.com/luenne/image/upload/c_scale,h_400,w_600/v1503423810/Screen-Shot-2017-08-22-at-19.34.54_twwpyu.jpg" alt="image" class="show-banner">
        </div>
      <% end %>
          <h1>This is <%= @hedgie.name %></h1>
      <p><%= @hedgie.description %></p>

    </div>
    <div class="submit-field">
      <div class="submit-field">
        <h1 class= "book-box-color"><%= @hedgie.name %> the Hedgehog</h1>
        <h3>â‚¬<span id="price-per-day"><%= @hedgie.price %></span> / per day</h3>
        <div class="hedgie-input-forms">
          <%= simple_form_for([@hedgie, @booking]) do |f| %>
          <div class="form-inline">
          <%= f.input :start_date, as: :string, label: "Start", input_html: { class: "datepicker", value: Time.now.strftime('%m/%d/%Y') } %>
          <%= f.input :end_date, as: :string, label: "End", input_html: { class: "datepicker", value: Time.now.strftime('%m/%d/%Y') } %>
          </div>
          <br>
          <%= f.button :submit, "Book #{@hedgie.name}", class: "home-button-green text-center", id: "booking_submit"%>
          <% end %>
          <br>
      </div>
    </div>
  </div>
  </div>
</div>
<br>
