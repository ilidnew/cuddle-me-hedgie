<div class="banner">
  <div class="row" align="center">
    <% if @hedgie.photo? %>
    <div class="card">
      <%= cl_image_tag @hedgie.photo.path, width: 600, height: 300, crop: :fill, class: "swipebox" %>
    </div>
    <% else %>
    <div class="card">
      <a rel="gallery" href="http://lorempixel.com/900/600/people/1" class="swipebox" title="person 1">
        <img src="http://lorempixel.com/300/200/people/1" alt="image">
      </a>
    </div>
    <% end %>
  </div>
</div>
<div class="container">
  <div class="row">
    <div class="col-xs-8">
      <h1>This is <%= @hedgie.name %></h1>
      <p><%= @hedgie.name %>'s description</p>
    </div>
    <div class="col-xs-4">
      <h1>Price to rent <%= @hedgie.name %></h1>
      <p><%= @hedgie.price %></p>
      <%= link_to "Book #{@hedgie.name}", new_booking_path, class: "btn btn-primary" %>
    </div>
  </div>
</div>
