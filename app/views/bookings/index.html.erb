<div class="container">
  <div class="row">
    <div class="title">
      <h1>Your Hedgie Playtimes</h1>
    </div>
    <% @bookings.each do |booking| %>
    <div class="col-xs-12 col-sm-4">
    <% if booking.hedgie.photos? %>
      <%= cl_image_tag booking.hedgie.photos.first.path, width: 400, height: 300, crop: :fill, class: "photo" %>
      <% end %>
      <div class="info">
        <p><%= link_to booking.hedgie.name, hedgy_path(booking.hedgie) %></p>
        <p><%= link_to "Reveiw " + booking.hedgie.name, new_booking_review_path(booking)  %></p>
        <p>Playtime booked: <%= booking.start_date %> to <%= booking.end_date %></p>

        <% booking.reviews.each do |review| %>
        <div>
        <%= review.content %>
        <%= link_to "Delete", review_path(review),
        method: :delete,
        data: { confirm: "Are you sure?" } %>
        </div>
        <% end %>
      </div>
    </div>
    <% end %>
  </div>
</div>
</div>
