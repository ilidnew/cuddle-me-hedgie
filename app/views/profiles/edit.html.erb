<div class="form-container larger-form">
  <div class="title">
    <h2>Update my profile</h2>
  </div>
  <div class="form-form larger-form">
    <%= simple_form_for @user, url: profile_path(@user) do |f|%>
    <div class="form-inputs">
      <%= f.input :email %>
      <%= f.input :first_name %>
      <%= f.input :last_name %>
    </div>
    <div class="form-actions text-center">
    <%= f.submit :submit, value: "Update my profile", class: "home-button-green" %>
    </div>
    <% end %>
  </div>
  <%= link_to "Cancel my account", registration_path(@user), data: { confirm: "Are you sure?" }, method: :delete %>
</div>
